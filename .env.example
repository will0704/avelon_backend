# =====================================================
# AVELON BACKEND - ENVIRONMENT VARIABLES
# =====================================================
# Copy this file to .env and fill in your values

# =====================================================
# DATABASE
# =====================================================
DATABASE_URL="postgresql://avelon:avelon_password@localhost:5432/avelon_db"

# =====================================================
# REDIS
# =====================================================
REDIS_URL="redis://localhost:6379"

# =====================================================
# JWT AUTHENTICATION
# =====================================================
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# =====================================================
# EMAIL (MailerSend)
# =====================================================
MAILERSEND_API_KEY="mlsn_xxxxx"
EMAIL_FROM="noreply@yourdomain.com"

# =====================================================
# BLOCKCHAIN (Sepolia Testnet)
# =====================================================
# Get RPC URL from Alchemy: https://dashboard.alchemy.com
# Get Sepolia ETH from: https://cloud.google.com/application/web3/faucet/ethereum/sepolia
SEPOLIA_RPC_URL="https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY"
SEPOLIA_PRIVATE_KEY="0x..."
TREASURY_ADDRESS="0x..."

# Deployed Contract Addresses (run deploy script to get these)
AVELON_LENDING_ADDRESS="0x..."
COLLATERAL_MANAGER_ADDRESS="0x..."
REPAYMENT_SCHEDULE_ADDRESS="0x..."

# =====================================================
# AI SERVICE
# =====================================================
AI_SERVICE_URL="http://localhost:8000"

# =====================================================
# FIREBASE (Push Notifications)
# =====================================================
FIREBASE_PROJECT_ID="avelon-xxxxx"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----..."
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@..."

# =====================================================
# FILE STORAGE
# =====================================================
STORAGE_PATH="./uploads"
ENCRYPTION_KEY="your-32-byte-encryption-key-here"

# =====================================================
# DATABASE ENCRYPTION
# =====================================================
PRISMA_FIELD_ENCRYPTION_KEY="k1.aesgcm256.random-32-byte-key-here="

# =====================================================
# APP CONFIGURATION
# =====================================================
NODE_ENV="development"
PORT=3001
ETH_PHP_RATE="150000"
MIN_COLLATERAL_RATIO="120"
WARNING_COLLATERAL_RATIO="130"
GRACE_PERIOD_HOURS="24"
LIQUIDATION_PENALTY_PERCENT="5"
