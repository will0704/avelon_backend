{
  "name": "avelon_backend",
  "version": "1.0.0",
  "description": "Avelon - Blockchain-Based Crypto Lending Platform Backend",
  "main": "dist/index.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "hardhat:compile": "cd contracts && npx hardhat compile",
    "hardhat:test": "cd contracts && npx hardhat test",
    "hardhat:deploy": "cd contracts && npx hardhat run scripts/deploy.ts --network ganache",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/will0704/avelon_backend.git"
  },
  "keywords": [
    "blockchain",
    "crypto",
    "lending",
    "defi",
    "ethereum",
    "hono"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/will0704/avelon_backend/issues"
  },
  "homepage": "https://github.com/will0704/avelon_backend#readme",
  "dependencies": {
    "@avelon_capstone/types": "^1.0.0",
    "@hono/node-server": "^1.19.9",
    "@hono/zod-validator": "^0.7.6",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.16.0",
    "hono": "^4.11.4",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "pg": "^8.17.1",
    "resend": "^6.7.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.9",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "hardhat": "^3.1.4",
    "prettier": "^3.8.0",
    "prisma": "^7.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
